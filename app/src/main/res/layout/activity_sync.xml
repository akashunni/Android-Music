<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sync"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.quintlr.music.SyncActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <com.quintlr.music.SquareImageView
                android:id="@+id/activity_sync_profilePic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/loading"/>

            <TextView
                android:id="@+id/activity_sync_profileEMail"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="akashunni123@gmail.com"
                android:textColor="@color/pitchBlack"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:maxLines="1"
                android:layout_alignTop="@id/activity_sync_profilePic"
                android:layout_toRightOf="@id/activity_sync_profilePic"/>

            <TextView
                android:id="@+id/activity_sync_driveSpace"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="5GB free of 17GB"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:maxLines="1"
                android:layout_alignBottom="@id/activity_sync_profilePic"
                android:layout_toRightOf="@id/activity_sync_profilePic"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/activity_sync_syncText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Sync Progress:"
        android:textColor="@color/pitchBlack"/>

    <ProgressBar
        android:id="@+id/activity_sync_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_sync_syncText"
        android:layout_marginTop="10dp"
        android:progress="50"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

    <TextView
        android:id="@+id/activity_sync_syncScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50/100"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="@color/pitchBlack"
        android:layout_below="@id/activity_sync_progressBar"/>

    <Button
        android:id="@+id/activity_sync_syncBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_sync_syncScore"
        android:layout_marginTop="15dp"
        android:text="Sync Now"/>

</LinearLayout>
